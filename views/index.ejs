<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

    <body>

        <%- include('./partials/nav.ejs')%>

            <h2 class="blog-container-title"> All Blogs</h2>
            <div class="blogs content">
                <% if (blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>
                        <div class="blog-container">
                            <h3 class="title">
                                <%=blog.title%>
                            </h3>
                            <hr>
                            <!-- <p class="snippet">
                                <%=blog.snippet%>
                            </p> -->
                            <p>
                                <%=blog.body%>
                            </p>
                        </div>
                        <% })%>
                            <% } else { %>
                                <h3>There aren't any blogs to show</h3>
                                <% } %>
            </div>
    </body>
    <%- include('./partials/footer.ejs')%>

</html>